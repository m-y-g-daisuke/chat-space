.message{data: {message: {id: message.id}}}
  .message--info
    .message--info__name
      =message.user.name
    .message--info__date
      =message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message--posts
    - if message.content.present?
      .message--text
        =message.content
    = image_tag message.image.url, class:"message--image" if message.image.present? 